---
processes:
- name: tcp_router
  env:
    GODEBUG: netdns=cgo,tls13=0
  hooks:
    pre_start: /var/vcap/jobs/tcp_router/bin/bpm-pre-start
  additional_volumes:
    - path: /var/vcap/data/tcp_router/config
      writable: true
  capabilities:
  - NET_BIND_SERVICE
  - SYS_RESOURCE
  executable: /var/vcap/jobs/tcp_router/bin/tcp_router_ctl
